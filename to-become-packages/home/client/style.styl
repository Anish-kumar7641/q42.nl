@import "../../../styles/0_variables.styl"

.startingpoints
  span
    margin 0 1rem
  a
    font-weight 500
    border none
    text-decoration underline

.newslist
  width 600px
  margin 0 auto

.newsitem
  perspective 2000px
  fontSmoothing antialiased
  margin 0 0 40px 0
  animationFillMode forwards !important
  animation scaleUp 0.6s cubic-bezier(.34,.91,.62,1.09)

  for i in (2..10)
    &:nth-child({i})
      animationDelay 0.1s * i

  .col:last-child
    doFlex 4

  h2
    text-transform uppercase
    font-style italic
    font-size 24px
    color qColor
    margin-top 0

  a
    display block
    displayFlex()
    justifyContent space-between
    alignItems center
    border none
    background white
    border-radius .5rem
    padding 2rem
    transition ease .25s
    transform-style preserve-3d
    font-weight 300
    &:hover
      transform translateY(-2px) rotateX(5deg)
      background-image linear-gradient(#fff, #f3f9f3)
      box-shadow 0 2px 2px rgba(0,0,0,.2)
      color black

  p
    margin-top 0

    &.date
      font-size .9rem
      color rgba(0,0,0,.7)

  .image
    width 150px
    height 150px
    border solid 10px #f0f3ed
    border-radius 50%
    overflow hidden
    margin-left -120px
    margin-right 1rem
    img
      min-width 150px
      min-height 150px
      max-width 200px
      max-height 200px
