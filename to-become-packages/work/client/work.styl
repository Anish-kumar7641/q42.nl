@import "../../../styles/0_variables.styl"

itemBoxShadow()
  box-shadow 0 2px 4px rgba(0,0,0,.1)

.portfolio-item
  doFlex 1
  background white
  &:not(:last-child)
    margin-right 8px
  itemBoxShadow()
  transition all 200ms cubic-bezier(0.420, 0.000, 0.580, 1.000)

  a
    border-bottom none
    display block

  .details
    padding 12px

  &:not(.client-only)
    cursor pointer
    &:hover
      box-shadow 0px 4px 6px rgba(0,0,0,.2)
      transform translateY(-2px)

  &.client-only
    text-align center
    background-color #ccc
    fontSmoothing antialiased
    displayFlex()
    alignItems center
    justifyContent center
    box-shadow none
    h2
      margin 0
      color #bbb
      font-size 24px

  img
    width 100%
    height 160px
    object-fit cover

  h2
    smallcaps()
    font-size 15px
    font-weight 700
    font-style italic
    margin-top 0
    margin-bottom 0

  .slogan
    color colorDark
    font-size 14px
    margin-top 0

.meta

  img
    object-fit cover
    width 48px
    height 48px

.work-tags
  doFlex 1
  background #BAC1B4
  ul
    list-style none
    padding 0
    margin 0
    padding 12px
  li
    line-height 2.5rem
    display inline
  a
    padding .5rem .7rem
    background-color white
    font-weight 500
    font-size .8125rem
    color colorDark
    margin 0 .2rem 0 0
    border-bottom none
    border-radius .1825rem
    box-shadow 0px 2px 4px rgba(0,0,0,.1)
    transition all ease-in-out .1s
    &:hover
      background-color #73895B
      color white
    &.selected
      background-color colorDark
      color white
      transition all ease-in-out .1s
