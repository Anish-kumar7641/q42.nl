@import "0_variables.styl"

#footer
  background #222
  color #eee
  fontSmoothing antialiased

  section
    width 940px
    margin 0 auto

  p
    font-size .9rem

  a
    color #88c546

  h2, h3
    font-family bodyFont
    text-transform uppercase
    letter-spacing 1px
    font-size 18px

  h3
    color white
    font-size 12px
    margin 0

  ul
    list-style none
    margin 0
    padding 0
    li
      margin 0 0 .3rem 0

  .block-large
    padding 32px 0

  .intro-outro
    border-bottom none
    padding 2rem 0
    border-top solid 1px rgba(255,255,255,.3)

    p
      font-size .8rem
      color rgba(255,255,255,.7)

    a
      text-decoration none
      color rgba(255,255,255,.7)
      white-space nowrap
      &:not(:last-child)
        margin 0 1rem 0 0
      &:hover
        color white

    .fa
      vertical-align middle

    .contain
      displayFlex()
      width 80%
      margin 0 auto

      .address
        flex 1
        h2
          margin -2.6rem 0 2rem 0
          text-shadow 0 0 2px black
        img
          border-radius 50%
          width 64px
          height 64px

    p .note.kvk
      color rgba(255,255,255,.3)


  .q42-logo
    object, img
      width 50px
      height 70px
