@import "0_variables.styl"

#footer
  background #222
  color #eee
  fontSmoothing antialiased
  font-size .9rem

  section
    margin 0 auto

  a
    color #88c546
    &:hover
      border-bottom-color rgba(207, 239, 173, 0.3)

  h2, h3
    text-transform uppercase
    letter-spacing 1px
    font-size 18px

  h3
    color white
    font-size 12px
    margin 0

  ul
    list-style none
    margin 0
    padding 0

  li
    margin 0 0 .3rem 0

  .note.kvk
    color rgba(255,255,255,.3)

  .block-large
    padding 32px 0

  .q42-logo
    object, img
      width 50px
      height 70px

  .intro-outro
    padding 2rem 0
    border-top solid 1px rgba(255,255,255,.3)

    p
      font-size .8rem
      color rgba(255,255,255,.7)

    a
      text-decoration none
      color rgba(255,255,255,.7)
      white-space nowrap
      &:not(:last-child)
        margin 0 1rem 0 0
      &:hover
        color white

    .fa
      vertical-align middle
