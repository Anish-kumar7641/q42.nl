@import "0_variables.styl"


#header
  nav
    displayFlex()
    flexDirection column
    alignItems center
    padding 16px 0
    position relative
    z-index 5
  ul
    displayFlex()
    list-style none
    padding 0

    @media (max-width: 480px)
      position absolute
      top 0
      width 150px
      margin-top 0
      transform translateX(-100%)
      transition ease-in-out -webkit-transform .2s
      flexDirection column
      li:first-child
        display block
  li
    font-size .9rem
    margin 0 8px
    &:first-child
      display none

    @media (max-width: 480px)
      margin 0

    a
      color #fff
      text-shadow 0 1px rgba(0,0,0,.3)
      text-decoration none
      border-bottom none
      smallcaps()
      &:hover
        border-bottom solid 1px rgba(255,255,255,.8)

      @media (max-width: 480px)
        display block
        padding 10px
        color #000
        text-shadow none
        border-bottom solid 1px #ccc
        &:active
          background -webkit-linear-gradient(top, #ccc, #eee)
          color #555

#mobile-menu-icon
  display none

  @media (max-width: 480px)
    display block
    position absolute
    left 1rem
    color white
    cursor pointer
    font-weight 500
    padding 8px
    border solid 1px rgba(255,255,255,.8)
    border-radius 8px
    &:active
      transform scale(0.9)

// OJOO
#headergame
  width 100%
  height 100%
  position absolute
  z-index 1
  top 0

.q42-logo a
  position relative
  z-index 20
  pointer-events all
  border-bottom none
