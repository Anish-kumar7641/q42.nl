@import "0_variables.styl"

@media all and (max-width: 1024px) {
  /* Links always have an underline, because there is no hover state. */
  a, a:visited, a:hover { text-decoration: underline; }
}



@media all and (min-width: 941px) {
  .readmore:hover {
    background-color: #1D78B4;
    color: white;
    text-decoration: none;
    transition: all .2s ease-out;
    -webkit-transition: all .2s ease-out;
    -moz-transition: all .2s ease-out;
  }
  .visual.caption:hover img, .visual.caption:hover video {
    -webkit-transform: translateY(-15px);
    -moz-transform: translateY(-15px);
    -o-transform: translateY(-15px);
    transform: translateY(-15px);
  }
  .visual.caption:hover p {
    -webkit-transform: translateY(-25px);
    -moz-transform: translateY(-25px);
    -o-transform: translateY(-25px);
    transform: translateY(-25px);
  }
  .visual.caption, .visual.caption p, .visual.caption img, .visual.caption video {
    -webkit-transition: all .2s ease-out;
    -moz-transition: all .2s ease-out;
    -o-transition: all .2s ease-out;
    transition: all .2s ease-out;
  }
}



@media all and (max-width: 940px)

  .container, #footer > section
    width 620px

  .block-large
    flexWrap wrap
    .intro
      margin-bottom 20px

  .block-small
    min-width 300px
    &:nth-of-type(2)
      margin-right 0
    &:nth-child(3):last-child
      margin-top 40px





@media all and (max-width: 620px)

  .block-large, .block-full
    padding 20px 0
    display block

    &.right .body
      margin-left 0

  .container,
  #footer > section,
  #footer .block-small,
  #footer .block-small .body,
  #footer .block-small .visual { width: 460px; }

  .block-large .visual,
  .block-large .block-small,
  .block-large .block-small .body,
  .block-large .block-small .visual,
  .block-large .intro,
  .block-large .body
    width 100%
    max-width 100% !important

  .block-small
    margin-right 0
    &:not(:first-child)
      margin-top 20px
    .visual img 
      width 100%
      height auto

  .intro-outro
    padding 40px 0

  .qer
    width 100%
    height auto
    padding-left 70px
    margin-right 0

    img
      width 60px
      height 60px
      position absolute
      top 0
      left 0

    .polaroid
      display none

    .name
      color #000
      text-shadow none
      top 0
      left 0
      background none
      font 20px 'Permanent Marker', cursive
      position relative

    .contactData
      position relative
      display block
      font-size 12px

  .visual iframe, #blog-posts iframe { width: 100%; }

  .fb_iframe_widget, .fb_iframe_widget > span, .fb-comments iframe
    width 100% !important






@media all and (max-width: 480px)

  html, body
    font-size 14px

  body
    background #eee

  #loading
    top 84px

  #mobile-menu-icon {
    display: block;
    position: absolute;
    z-index: 5;
    top: 1em; left: 1em;
    color: white;
    cursor: pointer;
  }
  #mobile-menu-icon:hover { color: #ffc;}
  #mobile-menu-icon:active { -webkit-transform: scale(0.9);}
  #header ul {
    position: absolute;
    top: 0; left: 0;
    z-index: 6;
    width: 150px;
    margin-top: 0;
    -webkit-transform: translateX(-100%);
    -moz-transform: translateX(-100%);
    -ms-transform: translateX(-100%);
    transform: translateX(-100%);
    -webkit-transition: ease-in-out -webkit-transform .2s;
    -moz-transition: ease-in-out -moz-transform .2s;
    -ms-transition: ease-in-out -ms-transform .2s;
    transition: ease-in-out transform .2s;
    flexDirection column
  }
  /* show Home link */
  header ul li:first-child { display: block; }
  body.show-mobile-menu {
    overflow-x: hidden;
  }
  body.show-mobile-menu #page {
    -webkit-transform: translateX(150px);
    -moz-transform: translateX(150px);
    -ms-transform: translateX(150px);
    transform: translateX(150px);
  }
  #header li {
    display: block;
    margin: 0;
    line-height: 25px;
  }
  #header li a {
    display: block;
    padding: 10px;
    color: #000;
    text-shadow: none;
    border-bottom: solid 1px #ccc;
    text-align: left;
  }
  #header li a:hover {
    background-color: #fff;
    color: #555;
  }
  #header li a:active {
    background: -webkit-linear-gradient(top, #ccc, #eee);
    color: #555;
  }
  .lights-off #header li a:hover {
    background-color: #444;
    color: #ddd;
  }
  .lights-off #header li a {
    border-bottom-color: #444;
  }

  #particles { display: none; }
  #header li:last-child { margin: 0; }
  #logo img, #logo object { height: 80px;}

  .container, #footer > section 
    width 440px

  .block-small > ul, #blog-sidebar ul
    padding-left 40px

  .block-text
    padding 0

  body section,
  .block-large .body,
  .block-large .visual,
  .block-large .block-small,
  .block-large .block-small .body,
  .block-large .intro,
  .block-large .block-small .visual
    width auto
    margin-right 0

  .blog .blog-posts, .blog .blog-post
    margin-right 0

  .blog .blog-item
    padding 20px 0
    h1
      font-size 1.5em
    img, iframe
      max-width 100%
  .blog-post h1
    font-size 2em

  .intro-outro h1
    font-size 2em

  #colleagues .intro + aside { display: none; }