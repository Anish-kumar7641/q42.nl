@import "0_variables.styl"

#chat
  position fixed
  top 0
  left 0
  width 300px
  background #eee
  border-right solid 2px #ddd
  z-index 999
  height 100vh
  box-sizing border-box
  padding 16px

  h1
    margin 8px
    font-size 24px

  #chat-input
    position absolute
    bottom 0
    left 0
    width 100%
    padding 16px
    displayFlex()
    justifyContent space-between

    input
      font-size 16px
      padding 4px 8px

  ul
    list-style none
    margin 0
    padding 0

    li
      border-bottom solid 1px #ddd
      padding 8px
      font-size 14px

    .user
      font-weight bold