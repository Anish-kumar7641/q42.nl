/* A dark style for the Q42 site */

.lights-off

  background #222 -webkit-linear-gradient(top, #111, #000)
  box-shadow inset 0 0 20px #111

  color #efefef
  -webkit-font-smoothing antialiased

  #page
    background-color #222
    background-size cover

  .block-text h1 b, .blog h1 b, section h2, .block-large > .body > h2, #q42is-pre
    color #efefef

  a:link, a:visited
    color rgb(0, 154, 255)

  nav a:link, nav a:visited
    color white

  nav .pos, .block-text, .block-large, .block-full
    border-bottom-color #444

  .subcontent
    border-top-color #444

  .polaroid h3, .polaroid .phonenumber
    color #222

  #lights-toggle a
    color black
    background-color rgba(255,255,255,.7)

  #filter-options > li ul li a
    background-color #444
    &:hover
      background-color #555
    &:active
      background-color #333

  #colleagues
    ol li
      border-color #444
      &.no-results
        background-color #333
      & > .name
        color #fff