blockquote
  margin 0

  &:before
    content: "â€œ"
    font-size 3rem
    font-family serifTitleFont
    float left

  p
    font-family serifTitleFont
    padding 0 2.5rem

  cite
    font-style normal

.container
  header.block-text
    text-align center
    h1
      display inline-block
      background #ffd100
      padding .2rem .5rem
  .block-large
    background #fff
    padding 0
    margin 0 0 16px 0
    box-shadow 0 1px 1px rgba(0,0,0,.18)
    border-radius 3px
    &.block-no-padding-after
      margin-bottom 0
      border-bottom-left-radius 0
      border-bottom-right-radius 0
      & + .block-large
        border-top-left-radius 0
        border-top-right-radius 0
    &.block-no-padding
      padding 0
      & + .block-large
        border-top-left-radius 0
        border-top-right-radius 0
    &.blog:first-child
      margin-top 64px

  .block-full.intro-outro
    blockquote p
      font-size 2rem !important

  .block-small
    margin 0
    border-right solid 1px rgba(0,0,0,.1)
    &:nth-child(3)
      border-right none
    & > .body
      padding 32px
      h2
        padding-top 0

  .visual
    position relative
    width 100%
    img, video, iframe
      width 100%
      vertical-align middle
    img, video
      height auto
    .hover
      position absolute
      top 0
      left 0
      opacity 0
      z-index 1
      transition opacity ease .2s
    &.swap-hover:hover
      .hover
        opacity 1

  section h2, .block-large > .body h2
    font-size 1.5rem

  .block-large > .body
    margin 0
    padding 32px
    background aliceblue
    & + .visual
      height 100%

  aside.subcontent
    padding 32px
    gradient-box()

    a
      color white
      opacity .7

    ul
      margin 0
      padding 0 0 0 1rem

    h2
      margin 1.5rem 0
      &:first-child
        margin-top 0

  #colleagues
    .intro
      width inherit
      margin 0
      doFlex 13

      .qer
        margin 0 8px 8px 0

    aside
      margin-right 0
      doFlex 5

      #filter-options
        margin inherit
        padding inherit
        a
          background-color rgba(255,255,255,.2)
          &:hover
            color white
            background-color rgba(255,255,255,.3)

  .censored
    color black
    background black
    padding 0 4px

  .censored
    color black
    background black
    padding 0 4px

#footer
  .fn
    display none

@media (min-width 940px)

  .block-large.booklet
    margin 32px 0
    background transparent
    perspective 2000px
    transition box-shadow ease .2s
    &:hover
      box-shadow 0 0 20px rgba(0,0,0,.2)

    .block-small
      transition transform ease .2s
      background white
      &:first-child
        transform-origin right
        &:hover
          box-shadow -10px 0 20px rgba(0,0,0,.1)
          transform rotateY(15deg)
      &:last-child
        transform-origin left
        &:hover
          transform rotateY(-15deg)
          box-shadow 10px 0 20px rgba(0,0,0,.1)



@media (max-width 940px)

  .block-large
    flexDirection column

  .container

    .block-small
      &:first-child
        margin-right 0

    .block-large
      .intro
        margin-right 0
        width inherit

    .block-large.blog
      flexWrap inherit
      flexDirection column

    .blog .blog-posts, .blog .blog-post
      margin-right 0
      max-width 100%

    .block-large > .block-small:first-child:nth-last-child(2), .block-large > .block-small:first-child:nth-last-child(2) ~ div
      max-width inherit

    .block-large.right .body
      order inherit

  #footer
    .visual
      width 100%


@media (max-width 620px)

  .block-small
    min-width inherit

  .container aside.subcontent
    margin-top inherit
    width inherit

@media (max-width 480px)

  .container .block-large.blog:first-child
    margin-top 32px

  .block-small > ul, #blog-sidebar ul
    padding-left 0
