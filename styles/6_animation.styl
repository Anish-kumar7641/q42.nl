@import "0_variables.styl"

@media screen and (min-width 941px)
  #header
    animation fadeInHeader 1.2s cubic-bezier(0.770, 0.000, 0.175, 1.000)
    animationFillMode both
    li
      animation fadeInUpward 0.6s cubic-bezier(0.770, 0.000, 0.175, 1.000)
      animationFillMode both

    for i in (1..6)
      li:nth-child({i})
        animationDelay 0.04s * i

  .q42-logo
    animationFillMode both
    animation fadeInUpward 1s cubic-bezier(0.770, 0.000, 0.175, 1.000)

  .container
    // animationFillMode both
    // animation fadeInUpward 0.6s cubic-bezier(0.4, 0, 0.2, 1)

    // aside.subcontent.block-small
    //   -webkit-transform-origin top
    //   animationFillMode both
    //   animation fadeInUpward 0.6s cubic-bezier(0.4, 0, 0.2, 1)

    & > *
      opacity 0
      // Per http://stackoverflow.com/a/26393720/16308,
      // !important is needed here for some reason for the "forwards"
      // to stick. Seems to have something to do with flexbox.
      animationFillMode forwards !important
      animation scaleUp 0.6s cubic-bezier(.34,.91,.62,1.09)

    for i in (2..10)
      & > *:nth-child({i})
        animationDelay 0.2s * i

@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@-webkit-keyframes fadeInUpward
  from
    transform translateY(100px)
    opacity 0
  to
    opacity 1

@-webkit-keyframes fadeInHeader
  from
    transform translateY(-100px)
    opacity 0

@-webkit-keyframes scaleUp
  from
    transform scale(0.1)
  to
    transform scale(1)
    opacity 1
