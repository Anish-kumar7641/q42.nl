@import "0_variables.styl"

.container > *
  // doesn't work in Firefox, so is manually added
  // see startup.coffee#13
  // opacity 0
  // Per http://stackoverflow.com/a/26393720/16308,
  // !important is needed here for some reason for the "forwards"
  // to stick. Seems to have something to do with flexbox.
  animationFillMode forwards !important
  animation scaleUp 0.6s cubic-bezier(.34,.91,.62,1.09)

  for i in (2..10)
    &:nth-child({i})
      animationDelay 0.2s * i

@-webkit-keyframes fadeIn
  from
    opacity 0
  to
    opacity 1

@-webkit-keyframes fadeInUpward
  from
    transform translateY(100px)
    opacity 0
  to
    opacity 1

@-webkit-keyframes fadeInHeader
  from
    transform translateY(-100px)
    opacity 0
  to
    transform translateY(0)
    opacity 1

@-webkit-keyframes scaleUp
  from
    transform scale(0.1)
  to
    transform scale(1)
    opacity 1
