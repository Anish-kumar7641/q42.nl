  h2
    margin-top 0

address.vcard.body
    margin 10px 0
    font-weight 500
    color colorDark
    &.footer
      color white
      margin 0

.light-background
  background colorLight

.white-background
  background white

.subcontent
  background white
  padding 10px
  doFlex 2
  color white
  widht 300px
  h2
    font-weight normal
    &:first-child
      margin-top 0
  a
    color white
    opacity .8
    border-bottom none
    &:hover
      border-bottom solid 1px rgba(255,255,255,.7)
  ul
    margin 0
    padding 0 0 0 1rem

.visual
  display block
  border-bottom none
  position relative
  width 100%
  img, video, iframe
    width 100%
    vertical-align middle
  img, video
    height auto
  .hover
    position absolute
    top 0
    left 0
    opacity 0
    z-index 1

    p
      position absolute
      z-index 999
      margin 0
      width 100%
      padding 4px 8px
      color #FFF
      font-size .8rem
      font-weight 500
      background-color #000
      fontSmoothing antialiased

.block-with-icons
  padding 10px
  ul
    padding 0
    margin-bottom 10px
  li
    displayFlex()
    alignItems top
    &:not(:last-child)
      padding 0 0 20px 0px
    i
      min-width 40px
    div
      margin-left 12px
  h2
    margin-bottom 20px
  body
    padding 0

.censored
  color black
  background black
  padding 0 4px

.portfolio-thumb
  cursor pointer
  position relative
  padding 10px
  background white
  height 300px
  &:not(:last-child)
    margin-right 10px
  box-shadow 0 2px 4px rgba(0,0,0,.1)
  transition all 200ms cubic-bezier(0.420, 0.000, 0.580, 1.000)

  h2
    font-size 15px
    font-weight 700
    font-style italic
    margin-top 10px

  .descriptor
    color colorDark
    font-size 13px
    font-weight 500
    margin-top 10px

.portfolio-thumb:hover
  box-shadow 0px 4px 6px rgba(0,0,0,.2)
  transform translateY(-2px)

.page-title
  padding-bottom 0

.tech-icons
  position absolute
  bottom 0px
  margin-bottom 5px
  img
    height 28px
    margin-right 5px
