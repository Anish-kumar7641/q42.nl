@import "0_variables.styl"

body
  font 300 1rem bodyFont
  margin 0
  background-color colorGreen
  border 10px solid colorGreen

  @media (max-width: 480px)
    &.show-mobile-menu
      overflow-x hidden
      #page
        transform translateX(150px)

p, ol, ul
  line-height 1.7em
  max-width 650px
  margin 0 auto

p
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0

h1, h2, h3
  font titleFont
  color colorDark
  font-size 80px
  font-weight bold
  font-style italic
  text-transform uppercase

h2
  font-size 25px

h3
  font-size 1rem
  text-transform none
  margin-top 10px

.descriptor
  color colorDark
  font-weight 300

iframe
  border none

address
  font-style normal

figure
  margin 1.5rem 0

blockquote
  margin 0

  &:before
    content: "â€œ"
    font-size 3rem
    font-family serifTitleFont
    float left

  p
    font-family serifTitleFont
    padding 0 2.5rem

cite
  font-style normal

a
  font-weight bold
  text-decoration none
  transition all .15s ease 0s
  color colorQgreen

#page
  transition transform .2s ease
  background colorLight
  &.portfolio-item
    background white

  &.visible-backgrounds
    #backgrounds
      opacity 1
      background transparent
    #micrio
      opacity 0
  &.visible-micrio
    #micrio
      opacity .5
    #backgrounds
      opacity 1
      background #333
      .bg
        display none
  &.ishome
    background none

#not-found
  margin 40px auto
  text-align center
  background #d33
  color white
  border solid 20px white
  box-shadow 0 0 4px rgba(0,0,0,.4)
  padding 80px
  text-transform uppercase

  @media (max-width 480px)
    padding 32px
    a
      border none
      padding 0

  img
    width 100%
  p
    font-size 24px
  a
    border solid 1px white
    border-radius 25px
    padding 5px 15px
    color white
  h1
    font-size 180px
    margin 0

#loading
  text-align center
  padding 100px 0
  height 1000px

  img
    opacity 0
    width 128px
    animation fadeIn ease .2s
    animationDelay .2s
    animationFillMode forwards

.block-readmore
  text-align center
  a
    border-radius 16px
    background-color #cef
    padding .4rem 1rem
    &:hover
      background-color #def

.container
  @media (max-width 940px)
    margin 0 auto
    width 620px
  @media (max-width 620px)
    width 460px
  @media (max-width 480px)
    width 90%
    min-width 300px

.block-text
  padding 40px 0
  text-align center
  margin 0 auto
  @media (max-width: 480px)
    padding 0
  @media all and (max-width: 620px)
    padding 40px 0
  h1
    margin 0
    text-transform uppercase
    fontSmoothing antialiased
    b
      font-weight 800

    @media (max-width 480px)
      font-size 3rem
  h2
    max-width 650px
    margin 0 auto

.block-full
  display block
  position relative
  margin 0 auto
  text-align center

  @media all and (min-width 480px)
    &:first-child
      padding-top 0

  @media all and (max-width: 620px)
    padding 20px 0
    display block

    &.right .body
      margin-left 0

  &.invert
    h1, h2, h3, h4, p
      color white
      fontSmoothing antialiased

  &.hero
    margin-top 10em

    p
      font-size 1.3rem
      font-weight 700

      a, a:hover, a:visited
        color colorGreen

  p
    font-size 1.3rem

  h1
    font-size 3rem
    font-weight 500
    text-align center
    margin 48px auto 24px auto
    width 75%
  h2
    display: block
    margin: 0 auto
    font-size: 1rem
    font-weight: bold
    width: 75%

    a
      color: colorGreen
      border-bottom: 1px solid colorGreen
    a:hover
      border-color: 1px solid colorGreen

  blockquote p
    font-size 2rem

  .tagline
    font-weight: 700
    font-style: italic
    text-transform: uppercase
    font-size: 6.5rem
    line-height: 6rem

.block-large
  displayFlex()

  &.block-no-padding-after
    padding-bottom 0

  & > .body
    doFlex 2

    h2
      margin-bottom 0
      & + h3
        margin-top 0

    h3
      font normal 14px/1.5 bodyFont
      color rgba(0,0,0,.5)
    p
      &:last-child
        margin-bottom 1.5rem

  .visual
    doFlex 3

  .bodytext
    doFlex 5
    max-width 650px
    margin 0 auto
    h3
      font-weight normal
    .visual
      margin-bottom 15px

  .newsitem
    transition: all 0.2s
    margin 1em 200px
    width 600px
    text-align left
    background rgba(255,255,255,0.2)

    .image
      float left
      width 100px
      height 100px
      margin-right 2em
      background-image url('/images/huesmall.jpg')
      background-size cover

    h2
      font-size 35px
      padding 15px

    p
      font-size 1rem
      font-weight normal

#page .newslist
  margin-top 6rem

  .newsitem
    background-color colorQgreen
    border-radius 5px
    position relative

  .newsitem:hover
      transition: all 0.2s
      transform scale(1.05,1.05)

