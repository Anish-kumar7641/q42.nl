    &.byqer
      background-color white

      a
        color colorQgreen
        border-bottom none

      p
        // color colorQgreen
        display inline-block
        position relative
        bottom 1rem

      img
        border-radius 50%
        width 45px
        z-index: 100
        display inline-block

      .author
        position absolute
        bottom: -42px;
        right: 1rem;

      .author:before
        content ''
        position absolute
        bottom 25px
        left -20px
        width 30px
        height 28px
        background-image url('/images/text-balloon-tail.svg')
        background-repeat: no-repeat
        background-size: 30px 28px


    h2
      margin 1rem
      font-style normal

.block-large > .body h2
  margin-top 0

// http://stackoverflow.com/q/8720931/16308
.block-large > .block-small:first-child:nth-last-child(2),
.block-large > .block-small:first-child:nth-last-child(2) ~ div
  max-width 33.3333%


.block-small
  doFlex 1
  @media (min-width 620px)
    &:not(:last-child)
      margin-right 10px
  & > .body
    padding 20px
