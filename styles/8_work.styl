@import "0_variables.styl"

// body
//   background-color white

.portfolio-hero
  max-width 42rem
  .clientName
    font-family serifTitleFont
    color white
    font-size 1.375rem
  .slogan
    font-family serifTitleFont
    font-size 1.375rem
    color white
  h1
    margin 0 auto
    text-shadow 2px 2px 0px rgba(0,0,0,.15)
    line-height 4.2rem
    border-top 3px solid
    border-bottom 3px solid
    padding 1rem 0 1rem 0
    color white

.tldr
  displayFlex()
  .tldr-image
    doFlex 1
    img
      width 100%
  .tldr-textbox
    doFlex 1
    background-color #F0F3ED
  .tldr-text
    padding 2rem

.portfolio-content-container
  margin 0 auto
  max-width 960px

.filterHeader
  font-weight 500
  color colorDark
  display block
  text-align center
  padding-top 1.25rem
  text-transform uppercase
  font-style italic

.portfolio-collection
  flexWrap wrap

.portfolio-filtercontainer
.portfolio-item
  margin .25rem
  min-width 18rem
  doFlex 1

  /*
    The following is needed for this to work in Safari.
    See: https://bugs.webkit.org/show_bug.cgi?id=136041
   */
  flexBasis 18rem

  &:nth-child(3n)
    margin-right 0

  &:nth-child(3n+1)
    margin-left 0

  img
    vertical-align middle

.portfolio-item
  a
    color colorDark

.portfolio-container
  background-color white
  h2
    color colorDark
    font-family serifTitleFont
    text-align center
    margin 0

.alternate-container
  background-color colorLight

.tldr
  padding 2rem 0

.chapter
  padding 2rem 0

.team
  padding 2rem 0
  text-align center

  img
    border-radius 50%
    height 60px
    width 60px
    margin 0 .5rem

  .contact-owner
    img
      height 80px
      width 80px
      border solid 3px white
