@import "../../../styles/0_variables.styl"

@media (min-width 620px)
  .block-full:first-child
    margin-top 100px
    margin-bottom 100px

.startingpoints
  span
    margin 0 1rem
  a
    font-weight 500
    border none
    text-decoration underline

.newslist
  width 600px
  margin 0 auto 3rem auto
  border-bottom solid 1px rgba(255,255,255,.3)

  & > h2, & > p, & > p a
    color white
  & > p
    margin 40px 0 !important
  & > h2, & > p
    text-align center
  & > h2
    font-weight 300
    font-style italic
    smallcaps()

  @media (max-width 600px)
    width 100%

.newsitem
  perspective 2000px
  margin 0 0 40px 0
  animationFillMode forwards !important
  animation scaleUp 0.6s cubic-bezier(.34,.91,.62,1.09)

  for i in (2..10)
    &:nth-child({i})
      animationDelay 0.1s * i

  .col:last-child
    doFlex 4

  h2
    text-transform uppercase
    font-style italic
    font-size 24px
    color qColor
    margin-top 0

  a
    display block
    displayFlex()
    justifyContent space-between
    alignItems center
    border none
    background white
    border-radius .5rem
    padding 2rem
    transition ease .25s
    transform-style preserve-3d
    font-weight 300
    &:hover
      transform translateY(-2px) rotateX(5deg)
      background-image linear-gradient(#fff, #f3f9f3)
      box-shadow 0 2px 2px rgba(0,0,0,.2)
      color black

  &.byqer
    a
      border solid 2px #69f
    h2
      color #69f


  p
    margin-top 0

  .metadata
    displayFlex()
    justifyContent space-between
    alignItems center
    font-size .9rem
    color rgba(0,0,0,.7)

  .author
    font-size .9rem
    float right
    img
      vertical-align middle
      border-radius 50%
      object-fit cover
      width 32px
      height 32px

  .image
    width 150px
    height 150px
    margin-left -120px
    margin-right 1rem
    overflow hidden
    border solid 10px #f0f3ed
    border-radius 50%
    img
      object-fit cover
      width 150px
      height 150px
